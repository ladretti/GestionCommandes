<Page
    x:Class="GestionCommandes.Views.AccueilPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid Grid.Row="1" HorizontalAlignment="Center" x:Name="ContentArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="../Assets/logo-P400.png" Stretch="Uniform" Width="300" Height="300" VerticalAlignment="Center"/>
        <Button Grid.Row="1" Content="Voir les commandes" Padding="20,10" Foreground="White" BorderBrush="Transparent" BorderThickness="0" FontSize="18" Command="{Binding GoToCommandesCommand}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
